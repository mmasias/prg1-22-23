public class retoForIf {
    public static void main(String[] args) {
        int dimension;
        dimension = 21;

        for (int j = 1; j <= dimension; j = j + 1) {
            for (int i = 1; i <= dimension; i = i + 1) {

                if (
                // El código desde aqui
                (dimension)-i==j || (dimension+4)-i==j ||
                (dimension-4)-i==j || (dimension+8)-i==j ||
                (dimension-8)-i==j || (dimension+12)-i==j ||
                (dimension-12)-i==j || (dimension+16)-i==j ||
                (dimension-16)-i==j || (dimension+20)-i==j 
                // El código hasta aquí
                ) {
                    System.out.print("(*)");
                } else {
                    System.out.print(" . ");
                }
            }
            System.out.println();
        }
    }
}
